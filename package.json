            productCategories: [],
            geographicNeeds: [],
            companySize: '',
            description: '',
            website: ''
          } 
        : {
            coverageAreas: [],
            specialties: [],
            yearsExperience: 0,
            surgeonRelationships: 0,
            biography: ''
          }
      )
    };

    const result = await registerUser(email, password, userType, initialData);
    
    if (result.success) {
      navigate('/profile-setup');
    } else {
      setError(result.error);
      setLoading(false);
