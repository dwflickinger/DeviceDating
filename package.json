          <Box component="form" onSubmit={handleRegister} sx={{ mt: 1 }}>
            <FormControl component="fieldset" sx={{ mb: 2 }}>
              <FormLabel component="legend">I am a:</FormLabel>
              <RadioGroup
                row
                value={userType}
                onChange={(e) => setUserType(e.target.value)}
              >
                <FormControlLabel 
                  value="company" 
                  control={<Radio />} 
                  label="Medical Device Company" 
                />
                <FormControlLabel 
                  value="distributor" 
                  control={<Radio />} 
